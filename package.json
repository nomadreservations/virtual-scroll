{
    "name": "@nomadreservations/virtual-scroll",
    "version": "1.2.0",
    "description": "Virtual scroll directive for @angular (univeral compliant)",
    "main": "./bundles/virtual-scroll.umd.js",
    "module": "./esm5/virtual-scroll.js",
    "es2015": "./esm2015/virtual-scroll.js",
    "scripts": {
        "build": "node build.js",
        "build:watch": "nodemon -e js,ts,json --ignore dist --ignore documentation --ignore demo -x npm run build",
        "test": "karma start",
        "bump:patch": "npm version patch -m 'Bump version to %s for tag and release to npmjs'",
        "bump:minor": "npm version minor -m 'Bump version to %s for tag and release to npmjs'",
        "bump:major": "npm version major -m 'Bump version to %s for tag and release to npmjs'",
        "pack-and-build": "npm-run-all -s build pack-lib",
        "pack:watch": "nodemon -e js,ts,json --ignore dist --ignore documentation --ignore demo -x npm run pack-and-build",
        "pack-lib": "npm pack ./dist",
        "publish-lib": "npm publish ./dist --registry=https://registry.npmjs.org/",
        "publish-lib:next": "npm publish --tag next ./dist --registry=https://registry.npmjs.org/",
        "commit": "git cz -a",
        "release": "release-it",
        "build:release": "npm-run-all -s doctoc build compodoc",
        "release:patch": "npm-run-all -s doctoc bump:patch build compodoc pack-lib publish-lib",
        "release:minor": "npm-run-all -s doctoc bump:minor build compodoc pack-lib publish-lib",
        "release:major": "npm-run-all -s doctoc bump:major build compodoc pack-lib publish-lib",
        "compodoc": "compodoc -p tsconfig.json",
        "compodoc:serve": "compodoc -s",
        "compodoc:watch": "nodemon -e ts,json,md --ignore dist --ignore documentation -d 15 -x run-s doctoc compodoc",
        "docs": "npm-run-all -s compodoc docs:watch",
        "docs:watch": "npm-run-all -p compodoc:serve compodoc:watch",
        "doctoc": "doctoc README.md --maxlevel 3",
        "watch": "npm-run-all -p build:watch docs",
        "postversion": "git push && git push --tags",
        "demo": "npm-run-all -s demo:install demo:serve",
        "demo:watch": "cd demo && npm run start",
        "demo:serve": "npm-run-all -p demo:watch",
        "demo:install": "cd demo && yarn install"
    },
    "typings": "./virtual-scroll.d.ts",
    "homepage": "http://nomadreservations.co",
    "author": {
        "name": "Paul Ryan <paullryan>",
        "url": "https://github.com/paullryan"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/nomadreservatons/virtual-scroll"
    },
    "license": "MIT",
    "keywords": [
        "angular",
        "angular4",
        "aot",
        "aot-compatible",
        "aot-compilation",
        "library",
        "ng",
        "virtual-scroll",
        "typescript"
    ],
    "dependencies": {
        "@tweenjs/tween.js": "^17.1.1",
        "tslib": "^1.8.0"
    },
    "peerDependencies": {
        "@angular/common": ">= 5.0.0",
        "@angular/core": ">= 5.0.0"
    },
    "devDependencies": {
        "@angular/animations": "5.0.5",
        "@angular/cdk": "^5.0.0-rc.2",
        "@angular/common": "5.0.5",
        "@angular/compiler": "5.0.5",
        "@angular/compiler-cli": "5.0.5",
        "@angular/core": "5.0.5",
        "@angular/forms": "^5.0.5",
        "@angular/platform-browser": "5.0.5",
        "@angular/platform-browser-dynamic": "5.0.5",
        "@angular/platform-server": "5.0.5",
        "@compodoc/compodoc": "1.0.5",
        "@types/jasmine": "2.8.2",
        "@types/node": "^8.0.54",
        "chalk": "2.3.0",
        "codelyzer": "4.0.1",
        "colors": "1.1.2",
        "core-js": "2.5.1",
        "cz-conventional-changelog": "^2.1.0",
        "doctoc": "^1.3.0",
        "istanbul-instrumenter-loader": "3.0.0",
        "jasmine-core": "2.8.0",
        "karma": "1.7.1",
        "karma-chrome-launcher": "2.2.0",
        "karma-coverage-istanbul-reporter": "1.3.0",
        "karma-jasmine": "1.1.1",
        "karma-sourcemap-loader": "0.3.7",
        "karma-spec-reporter": "0.0.31",
        "karma-webpack": "2.0.6",
        "nodemon": "^1.12.1",
        "npm-run-all": "^4.1.2",
        "reflect-metadata": "0.1.10",
        "release-it": "^5.0.0",
        "rollup": "0.52.0",
        "rollup-plugin-license": "0.5.0",
        "rollup-plugin-node-resolve": "3.0.0",
        "rollup-plugin-sourcemaps": "0.4.2",
        "rxjs": "5.5.3",
        "shelljs": "0.7.8",
        "source-map-loader": "0.2.3",
        "ts-loader": "3.2.0",
        "tslint": "5.8.0",
        "typescript": "2.4.2",
        "uglify-js": "3.2.0",
        "webpack": "3.9.1",
        "zone.js": "0.8.18"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
